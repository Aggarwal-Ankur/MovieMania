<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ankuraggarwal.moviemania.DetailsActivity"
    tools:showIn="@layout/activity_details"
    android:orientation="vertical"
    android:weightSum="2">

    <ImageView
        android:src="@color/accent_material_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_weight="1"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="535dp"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/content_details"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_details"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/content_details"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="0" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="487dp"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/content_details"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_details"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginBottom="32dp"
        tools:layout_constraintBottom_creator="0" />
</LinearLayout>
